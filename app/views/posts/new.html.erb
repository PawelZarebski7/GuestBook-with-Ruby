<h2>Add New Post</h2>

<%= form_for @post do |f| %>
    <div class="form=group">
        <%= f.label :authot, "Author"%>
        <%= f.text_field :authot, class: "form-control"%>
    </div>
    <div class="form=group">
        <%= f.label :body, "Content"%>
        <%= f.text_field :body, class: "form-control"%>
    </div>
    <br>
    <%= f.submit "Add Post", class: "btn btn-success"%>
<% end %>